<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="7dp"
    app:cardBackgroundColor="#00000000"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <ImageView
            android:id="@+id/orderpic"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/Productanme"
            android:layout_width="0dp"
            android:padding="6dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/tenor_sans"
            android:text="TextView"
            android:textSize="21sp"
            app:layout_constraintStart_toEndOf="@+id/orderpic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Productkadam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/tenor_sans"
            android:text="TextView"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/orderpic"
            app:layout_constraintTop_toBottomOf="@+id/Productanme" />


        <TextView
            android:id="@+id/OrderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/tenor_sans"
            android:text="TextView"
            android:textSize="14sp"
            android:padding="4dp"
            app:layout_constraintStart_toEndOf="@+id/orderpic"
            app:layout_constraintTop_toBottomOf="@+id/Productkadam" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>